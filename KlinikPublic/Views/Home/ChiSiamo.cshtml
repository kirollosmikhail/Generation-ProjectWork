@{
    ViewData["Title"] = "Chi siamo";
}

<h1 id="ChiSiamo" style=" margin: 0.5em 0em;">
    I nostri medici
</h1>

@* -------------- DIV che contiene card e statistiche -------------- *@
<div class="d-flex justify-content-around mb-4">

    @* -------------- CARD CON I MEDICI E LA DESCRIZIONE -------------- *@

    <div class="gap-5" style="max-width: 73em;display: flex; flex-direction: row;">
        <column class="col-12 col-lg-3 d-flex">
            <card class="card shadow my-4 pt-3 align-self-stretch" style="margin-bottom: 4em !important;">
                <img src="~/img/medico6.png" style="margin: 0em 1em; border-radius: 4px;" />
                <div class="card-body" style="text-align: center;">
                    <h5 class="card-title"><strong>Visite</strong></h5>
                    <p class="card-text">
                        Professionale dedicato, il medico di visite offre cure mirate, ascoltando pazienti e garantendo un trattamento accurato.
                    </p>
                </div>
            </card>
        </column>
        <column class="col-12 col-lg-3 d-flex">
            <card class="card shadow my-4 pt-3 align-self-stretch" style="margin-bottom: 4em !important;">
                <img src="~/img/medico5.jpg" style="margin: 0em 1em; border-radius: 4px;" />
                <div class="card-body" style="text-align: center;">
                    <h5 class="card-title"><strong>Analisi</strong></h5>
                    <p class="card-text">
                        Professionista esperto e attento, il nostro medico di analisi offre servizi accurati e personalizzati per la tua salute ottimale.
                    </p>
                </div>
            </card>
        </column>
        <column class="col-12 col-lg-3 d-flex">
            <card class="card shadow my-4 pt-3 align-self-stretch" style="margin-bottom: 4em !important;">
                <img src="~/img/medico3.jpg" style="margin: 0em 1em; border-radius: 4px;" />
                <div class="card-body" style="text-align: center;">
                    <h5 class="card-title"><strong>Radiologie</strong></h5>
                    <p class="card-text">
                        Esperta radiologo dedicato a interpretare immagini mediche con precisione e cura per una diagnosi accurata e un trattamento efficace.
                    </p>
                </div>
            </card>
        </column>
    </div>


